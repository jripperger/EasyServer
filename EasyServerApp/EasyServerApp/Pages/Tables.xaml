<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyServerApp.Pages.Tables">
    <VerticalStackLayout WidthRequest="1750">
        <Label 
            Text="Restaurant Tables"
            FontSize="Medium"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        <Grid 
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="0, 20, 0, 0"
            x:Name="TablesGrid"
            ColumnSpacing="50"/>
        <Button
            Text="Assign Servers"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Margin="0, 0, 0, 10"
            x:Name="SaveBtn"
            Clicked="SaveServers"
            HeightRequest="40"
            WidthRequest="250"/>
        <Button
            Text="Add Table"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            x:Name="AddBtn"
            Clicked="AddTable"
            HeightRequest="40"
            WidthRequest="150"/>
    </VerticalStackLayout>
</ContentView>
