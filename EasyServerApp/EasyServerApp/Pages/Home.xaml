<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyServerApp.Pages.Home"
             Title="Home">
    <VerticalStackLayout>
        <Grid 
            x:Name="HomeGrid"
            WidthRequest="900"
            HorizontalOptions="Start"
            Margin="10, 20, 0, 20">

            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label 
                x:Name="WelcomeLbl"
                Grid.Row="1"
                Grid.Column="0"
                FontSize="Medium"/>
            <Button
                x:Name="ToTablesBtn"
                Text="Tables"
                Grid.Row="1"
                Grid.Column="2"
                WidthRequest="100"
                HeightRequest="40"
                Clicked="NavigateToTables"/>
            <Button
                x:Name="ToEmployeesBtn"
                Text="Employees"
                Grid.Row="1"
                Grid.Column="4"
                WidthRequest="100"
                HeightRequest="40"
                Clicked="NavigateToEmployees"/>
            <Button
                x:Name="ToQueueBtn"
                Text="Queue"
                Grid.Row="1"
                Grid.Column="3"
                WidthRequest="100"
                HeightRequest="40"
                Clicked="NavigateToQueue"/>
            <Button
                x:Name="SignOutBtn"
                Text="Sign Out"
                Grid.Row="1"
                Grid.Column="1"
                WidthRequest="100"
                HeightRequest="40"
                Clicked="SignOut"/>
        </Grid>

        <Frame Grid.Row="1" x:Name="HomeFrame" VerticalOptions="Center" HorizontalOptions="Center"/>
    </VerticalStackLayout>
    
</ContentPage>