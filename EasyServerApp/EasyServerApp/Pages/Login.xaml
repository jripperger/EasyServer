<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyServerApp.Pages.Login">
    <VerticalStackLayout>
        <Label 
            Text="Login to your Account"
            FontSize="Medium"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            x:Name="LoginLbl"/>
            <Entry
                Placeholder="Username" 
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                x:Name="UsernameField"/>
            <Entry 
                Placeholder="Password"
                IsPassword="True" 
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                x:Name="PasswordField"/>
            <Entry 
                Placeholder="Table ID"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                x:Name="TableIDField"
                IsVisible="False"/>
            <Button 
                Text="Go"
                x:Name="LoginBtn"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                Clicked="AuthenticateUser"/>
            <Entry
                Placeholder="First Name" 
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                x:Name="FirstNameField" 
                IsVisible="False"/>
            <Entry 
                Placeholder="Last Name"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                x:Name="LastNameField"
                IsVisible="False"/>
            <Entry
                Placeholder="Username" 
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                x:Name="NewUsernameField"
                IsVisible="False"/>
            <Entry 
                Placeholder="Password"
                IsPassword="True" 
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                x:Name="NewPasswordField"
                IsVisible="False"/>      
            <Button 
                Text="Sign Up"
                x:Name="CreateAccBtn"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                Clicked="CreateAccount"
                IsVisible="False"/>
        <Label 
            Text="or"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            x:Name="Divider1"/>
        <Button 
            Text="Create Account"
            x:Name="CrtAccFieldsBtn"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Clicked="ToggleCrtAccFields"/>
        <Label 
            Text="or"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            IsVisible="false"
            x:Name="Divider2"/>
        <Button 
            Text="Login to your Account"
            x:Name="LgnAccFieldsBtn"
            IsVisible="false"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Clicked="ToggleLgnAccFields"/>
        <Label 
            Text=""
            x:Name="Warning" />
        <Button
            Text="Table Login"
            x:Name="TableLoginBtn"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="ToggleTableFields"/>
    </VerticalStackLayout>
</ContentView>
