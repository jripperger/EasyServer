<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyServerApp.Pages.Queue">
    <VerticalStackLayout>
        <Label 
            x:Name="QueueLbl"
            FontSize="Medium"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        <Label 
            x:Name="QueueContentsLbl"
            FontAttributes="Bold"
            Margin="0, 20, 0, 0"
            Text="There are no tables awaiting service."
            IsVisible="{Binding Source={RelativeSource Mode=Self}}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        
        <Grid 
            VerticalOptions="Center" 
            Margin="0, 20, 0, 0"
            HorizontalOptions="Center"
            RowSpacing="10"
            x:Name="QueueGrid">

            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
        </Grid>
    </VerticalStackLayout>
</ContentView>
