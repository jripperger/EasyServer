<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyServerApp.Pages.RequestService">
    <VerticalStackLayout>
        <Grid
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="0, 20, 0, 0"
            x:Name="RequestServiceGrid"
            ColumnSpacing="50">

            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            
        </Grid>

        <Label 
            x:Name="TableLbl"
            Grid.Row="0"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        <Button
            Grid.Row="1"
            x:Name="ReqServerBtn"
            Text="Request Server"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="RequestServer"/>
    </VerticalStackLayout>
</ContentView>
