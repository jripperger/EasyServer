<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyServerApp.Pages.Employees">
    <VerticalStackLayout>
        <Label 
            Text="Manage Employees"
            FontSize="Medium"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        <Grid 
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="0, 20, 0, 0"
            x:Name="EmployeesGrid"
            ColumnSpacing="50"/>
        <Button
            Text="Assign Roles"
            VerticalOptions="Center"
            x:Name="SaveBtn"
            Clicked="SaveServers"
            HeightRequest="40"
            WidthRequest="250"/>
    </VerticalStackLayout>
</ContentView>
